{
    "name": "symply",
    "version": "0.2.2",
    "description": "A simple static site generator.",
    "author": "Oleg Legun <oleg.legun@gmail.com>",
    "homepage": "https://github.com/oleglegun/symply#readme",
    "repository": {
        "type": "git",
        "url": "git+https://https://github.com/oleglegun/symply.git"
    },
    "bugs": {
        "url": "https://github.com/oleglegun/symply/issues"
    },
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "compile": "npm run dist:clear && npx tsc",
        "publish": "npm run compile && npm publish",
        "watch": "npm run dist:clear && npx tsc -w",
        "dist:clear": "rm -rf dist",
        "start": "node index.js",
        "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx",
        "test": "npm run compile && tape test/**/*.js | tap-spec"
    },
    "dependencies": {
        "chalk": "3.0.0",
        "flat": "^5.0.2",
        "fs-extra": "10.0.0",
        "handlebars": "4.7.7",
        "html-minifier": "^4.0.0",
        "js-yaml": "4.1.0",
        "lodash": "^4.17.21",
        "progress": "2.0.3",
        "sass": "^1.32.12",
        "strip-ansi": "^6.0.0"
    },
    "devDependencies": {
        "@types/flat": "^5.0.2",
        "@types/fs-extra": "^9.0.11",
        "@types/html-minifier": "^4.0.0",
        "@types/js-yaml": "^4.0.1",
        "@types/lodash": "^4.14.169",
        "@types/node": "^14.14.44",
        "@types/prettier": "^2.2.3",
        "@types/progress": "^2.0.3",
        "@types/sass": "^1.16.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.3.0",
        "prettier": "^2.3.0",
        "tap-spec": "^5.0.0",
        "tape": "^5.2.2",
        "typescript": "^4.2.4"
    },
    "types": "./index.d.ts"
}
